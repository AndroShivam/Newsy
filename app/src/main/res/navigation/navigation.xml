<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/item_home">

    <fragment
        android:id="@+id/item_home"
        android:name="com.shivam.newsy.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_item_home_to_detailFragment"
            app:destination="@id/detailFragment" />
        <argument
            android:name="categoryName"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/item_categories"
        android:name="com.shivam.newsy.CategoriesFragment"
        android:label="@string/categories"
        tools:layout="@layout/fragment_categories" >
        <action
            android:id="@+id/action_item_categories_to_item_home"
            app:destination="@id/item_home" />
    </fragment>
    <fragment
        android:id="@+id/item_bookmark"
        android:name="com.shivam.newsy.BookmarkFragment"
        android:label="@string/bookmark"
        tools:layout="@layout/fragment_bookmark" />
    <fragment
        android:id="@+id/item_settings"
        android:name="com.shivam.newsy.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.shivam.newsy.DetailFragment"
        android:label="DetailFragment" >
        <argument
            android:name="article"
            app:argType="com.shivam.newsy.Article" />
    </fragment>
</navigation>